<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
	<name>com_mediacat</name>
	<author>Clifford E Ford</author>
	<creationDate>December 2020</creationDate>
	<copyright>(C) 2020 Clifford E Ford. All rights reserved.
	</copyright>
	<license>GNU General Public License version 3</license>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>0.1</version>
	<description>COM_MEDIACAT_XML_DESCRIPTION</description>
	<namespace path="src">J4xdemos\Component\Mediacat</namespace>
	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.sql</file>
		</sql>
	</uninstall>

	<!-- Site Main File Copy Section -->
	<!-- Note the folder attribute: This attribute describes the folder
		to copy FROM in the package to install therefore files copied
		in this section are copied from /site/ in the package -->

	<files folder="site">
		<folder>src</folder>
	</files>
	<languages folder="site">
		<language tag="en-GB">language/en-GB/com_mediacat.ini</language>
	</languages>
	<administration>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>media.xml</filename>
			<folder>forms</folder>
			<folder>layouts</folder>
			<folder>resources</folder>
			<folder>services</folder>
			<folder>src</folder>
			<folder>tmpl</folder>
		</files>
		<languages folder="admin">
			<language tag="en-GB">language/en-GB/com_mediacat.ini</language>
			<language tag="en-GB">language/en-GB/com_mediacat.sys.ini</language>
		</languages>
	</administration>
</extension>