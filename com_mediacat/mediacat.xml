<?xml version="1.0" encoding="utf-8"?>
<extension type="component" method="upgrade">
	<name>com_mediacat</name>
	<author>Clifford E Ford</author>
	<creationDate>December 2020</creationDate>
	<copyright>(C) 2020 Clifford E Ford. All rights reserved.
	</copyright>
	<license>GNU General Public License version 3</license>
	<authorEmail></authorEmail>
	<authorUrl></authorUrl>
	<version>0.1.1</version>
	<description>COM_MEDIACAT_XML_DESCRIPTION</description>
	<namespace path="src">J4xdemos\Component\Mediacat</namespace>

	<media destination="com_mediacat" folder="media">
		<file>joomla.asset.json</file>
		<folder>css</folder>
		<folder>js</folder>
	</media>

	<administration>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<folder>forms</folder>
			<folder>help</folder>
			<folder>layouts</folder>
			<folder>language</folder>
			<folder>services</folder>
			<folder>src</folder>
			<folder>tmpl</folder>
		</files>
		<menu img="class:default">com_mediacat</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu
				link="option=com_mediacat&amp;view=images"
				view="images"
				img="images"
				alt="Mediacat/Images"
				>
				com_mediacat_images
			</menu>
			<menu
				link="option=com_mediacat&amp;view=files"
				view="files"
				img="files"
				alt="Mediacat/Files"
				>
				com_mediacat_files
			</menu>
			<menu
				link="option=com_mediacat&amp;view=folders"
				view="folders"
				img="folders"
				alt="Mediacat/Folders"
				>
				com_mediacat_folders
			</menu>
		</submenu>

	</administration>
</extension>